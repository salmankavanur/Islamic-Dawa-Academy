{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/$1" }
    ],
    "env": {
      "NEXT_PUBLIC_BASE_URL": "https://your-vercel-app.vercel.app",
      "MONGODB_URI": "@mongodb_uri"
    }
  }